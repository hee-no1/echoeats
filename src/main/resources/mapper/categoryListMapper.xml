<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pofol.main.product.category.CategoryDto">

    <!-- 대 카테고리 리스트 -->
    <select id="bigCateList" resultType="com.pofol.main.product.category.CategoryDto">
        SELECT cat_code, cat_name
        FROM category
        WHERE tier = 1
        ORDER BY cat_code
    </select>

    <!-- 중 카테고리 리스트 -->
    <select id="midCateList" parameterType="String" resultType="com.pofol.main.product.category.CategoryDto">
        SELECT cat_code
        FROM category
        WHERE parent_code = #{cat_code} AND tier = 2
        ORDER BY cat_code
    </select>


</mapper>